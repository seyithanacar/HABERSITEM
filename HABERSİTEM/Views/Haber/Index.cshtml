@using HABERSİTEM.Models.Sınıflar
@model List<Haber>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Kullanici_Layout.cshtml";
}


@Html.Raw(TempData["msg"])
@Html.Raw(TempData["msg1"])
<div class="row"> 

    <div class="container-fluid " style="height:10px"></div>
    @foreach (var x in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-7 " style="scroll-margin-top:10px">
            <a href="/Haber/Detay/@x.Haberid" style="text-decoration: none;">
                <div class="" style="background-color:whitesmoke">
                    <img class="card-img-top" src="@x.Haberresim" style="width:100%; height:14rem;" alt="Haber Resmi">
                    <div class="card-body ">

                        <h5 class="card-title" style="text-decoration-color:black">@Html.Raw(HttpUtility.HtmlDecode(x.Haberbaslik.Length > 60 ? x.Haberbaslik.Substring(0, 60) + "..." : x.Haberbaslik))</h5>

                    </div>

                    <div class="row card-footer limited-text" style="width:100%; height:4rem;">

                        <small class="text-muted  col-lg-8">Kategori:@x.Kategori.Kategoriadi</small>
                    </div>
                </div>
            </a>
            <br />
        </div>
    } 
</div>